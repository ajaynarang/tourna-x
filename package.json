{
  "name": "tourna-x",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:verbose": "echo '🔍 Root Build Environment:' && echo 'Node Version:' && node --version && echo 'PNPM Version:' && pnpm --version && echo 'TypeScript Version:' && npx tsc --version && echo '📦 Building all packages...' && turbo run build",
    "build:frontend": "turbo run build --filter=frontend",
    "build:backend": "turbo run build --filter=backend",
    "build:docs": "turbo run build --filter=docs",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "dump-db": "node scripts/dump-db.js",
    "restore-db": "node scripts/restore-db.js",
    "dump-db-native": "node scripts/dump-db-native.js",
    "restore-db-native": "node scripts/restore-db-native.js"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=20.x"
  },
  "packageManager": "pnpm@9.0.0",
  "pnpm": {
    "overrides": {
      "typescript": "5.9.2",
      "zod": "4.1.3"
    }
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "description": "Tournament Management System",
  "dependencies": {
    "dotenv": "^16.4.5",
    "node-fetch": "^3.3.2",
    "sonner": "^2.0.7",
    "turbo": "^2.5.6",
    "vaul": "^1.1.2",
    "vercel": "^46.0.2"
  }
}