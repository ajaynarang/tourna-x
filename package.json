{
  "name": "tourna-x",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:verbose": "echo '🔍 Root Build Environment:' && echo 'Node Version:' && node --version && echo 'Yarn Version:' && yarn --version && echo 'TypeScript Version:' && npx tsc --version && echo '📦 Building all packages...' && turbo run build",
    "build:frontend": "turbo run build --filter=frontend",
    "build:backend": "turbo run build --filter=backend",
    "build:docs": "turbo run build --filter=docs",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=20.x"
  },
  "packageManager": "yarn@1.22.22",
  "overrides": {
    "typescript": "5.9.2"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "resolutions": {
    "zod": "4.1.3"
  },
  "description": "Tournament Management System",
  "dependencies": {
    "turbo": "^2.5.6",
    "vaul": "^1.1.2",
    "vercel": "^46.0.2"
  }
}